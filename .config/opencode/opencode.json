{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "plan",
  "model": "github-copilot/claude-sonnet-4.5",
  "watcher": {
    "ignore": ["node_modules/**", "dist/**", ".git/**"]
  },
  "agent": {
    "plan": {
      "model": "github-copilot/claude-opus-4.5"
    },
    "build": {
      "model": "github-copilot/claude-sonnet-4.5"
    }
 },
 "provider": {
   "google": {
     "options": {
       "websearch_cited": {
         "model": "gemini-2.5-flash"
       }
     }
   }
 },
 "plugin": [
   "micode",
   "opencode-wakatime",
   "opencode-websearch-cited"
 ]
}
